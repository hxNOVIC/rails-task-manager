<h1><%= @task.title %></h1>


<p><%= @task.details %></p>
<% if @task.completed %>
<p>☑︎ Done !</p>
<% else %>
<p>☐ TODO!</p>
<% end %>

<p><%= link_to 'Back', '/tasks' %></p>
<p><%= link_to 'Edit', edit_task_path %></p>
<p><%= link_to '☠︎', task_path(@task), method: :delete, data: { confirm: 'Are you fucking sure?' } %></p>

